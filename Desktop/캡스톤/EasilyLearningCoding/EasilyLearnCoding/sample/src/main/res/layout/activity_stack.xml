<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stackstack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <ImageButton
            android:id="@+id/stack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stack1"/>
        <ImageButton
            android:id="@+id/stack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stack2"/>
        <ImageButton
            android:id="@+id/stack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stack3"/>
        <ImageButton
            android:id="@+id/stack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stack4"/>
    </LinearLayout>
</ScrollView>